<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ProgressBar
        android:id="@+id/total_tv_activation_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/total_tv_activation_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ttv_title_customer_data"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etTtvFirstName"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ttv_first_name"
                    android:imeActionLabel="@string/ttv_first_name"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etTtvLastName"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ttv_last_name"
                    android:imeActionLabel="@string/ttv_last_name"
                    android:inputType="text" />/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etJТtvJmbg"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ttv_jbmg"
                    android:imeActionLabel="@string/ttv_jbmg"
                    android:inputType="number"
                    android:maxLength="13" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <AutoCompleteTextView
                    android:id="@+id/tvТtvCommunity"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:dropDownHeight="wrap_content"
                    android:hint="@string/ttv_community"
                    android:imeActionLabel="@string/ttv_community" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <AutoCompleteTextView
                    android:id="@+id/tvTtvSettelemnt"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/ttv_settlement"
                    android:imeActionLabel="@string/ttv_settlement" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <AutoCompleteTextView
                    android:id="@+id/tvTtvStreet"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/ttv_street"
                    android:imeActionLabel="@string/ttv_street" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etTtvHouseNo"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ttv_house_number"
                    android:imeActionLabel="@string/ttv_house_number"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etTtvHouseNo2"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ttv_sub_number"
                    android:imeActionLabel="@string/ttv_sub_number"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etTtvFloor"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ttv_floor"
                    android:imeActionLabel="@string/ttv_floor"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etTtvRoom"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ttv_room"
                    android:imeActionLabel="@string/ttv_room"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etTtvPostCode"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ttv_post_code"
                    android:imeActionLabel="@string/ttv_post_code"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etTtvFixNumber"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ttv_fix_number"
                    android:imeActionLabel="@string/ttv_fix_number"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etTtvMobile"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ttv_mobile_number"
                    android:imeActionLabel="@string/ttv_mobile_number"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etTtvEmail"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ttv_email"
                    android:imeActionLabel="@string/ttv_email"
                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
